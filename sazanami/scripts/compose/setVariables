_FW = 1024		# 全角幅 (Full Width)
_HW = _FW / 2		# 半角幅 (Half Width)
_3rd = _FW / 3;	_QW = _FW / 4;
_5th = _FW / 5;	_6th = _FW / 6;
_8th = _FW / 8;	_10th = _FW / 10;
_12th = _FW / 12;	_15th = _FW / 15;
_20th = _FW / 20;	_25th = _FW / 25;
_30th = _FW / 30;	_40th = _FW / 40;
_50th = _FW / 50;	_100th = _FW / 100

# 東風明朝の場合
 _BOTTOM = -144
 _TOP = 880
_MIDLINE = (_TOP + _BOTTOM) / 2

# 本当はフォントから測定して決める量
_SCRIPTX = 55;
_SCRIPTY = 45;
_SUPRAISE = 480;
_SUBRAISE = -100;

