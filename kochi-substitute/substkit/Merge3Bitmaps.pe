Open(ISO8859_1)
Select(0u0,0u1F, 0u7F,0u9F); Clear()
Reencode("iso10646-1")
Generate(ISO8859_1:t:r + ".bdf", "bdf", 0)
SetCharCnt(65536)
Close()

Open(JISX0201)
Select(0u0,0u1F, 0u7F,0uA0, 0uE0,0uFF); Clear()
Reencode("iso10646-1")
Generate(JISX0201:t:r + ".bdf", "bdf", 0)
